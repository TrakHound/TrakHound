@rendermode InteractiveServer

@if (TreeItem != null && ObjectExplorerService != null)
{
    var treeItemType = TreeItem.GetType();
    if (treeItemType == typeof(ObjectExplorerObjectTreeItemModel))
    {
        <ObjectExplorerObjectTreeItem TreeItem = "(ObjectExplorerObjectTreeItemModel)TreeItem"/>
    }
    else if (treeItemType == typeof(ObjectExplorerNamespaceTreeItemModel))
    {
        <ObjectExplorerNamespaceTreeItem TreeItem = "(ObjectExplorerNamespaceTreeItemModel)TreeItem"/>
    }
}

@code {

    [CascadingParameter(Name = "ObjectExplorerService")]
    public ObjectExplorerService ObjectExplorerService { get; set; }

    [CascadingParameter]
    public ObjectExplorerTreeView ObjectTreeView { get; set; }

    [Parameter]
    public ObjectExplorerTreeItemModel TreeItem { get; set; }

}
